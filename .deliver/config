APP="swingcalo"

BUILD_HOST="swingcalo.com"
BUILD_USER="ruben"
BUILD_AT="/home/ruben/app_build"

PRODUCTION_HOSTS="swingcalo.com"
PRODUCTION_USER="ruben"
DELIVER_TO="/home/ruben/app_release"

pre_erlang_get_and_update_deps() {
  local _prod_secret_path="/home/ruben/app_config/prod.secret.exs"
  if [ "$TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      ln -sfn '$_prod_secret_path' '$BUILD_AT/config/prod.secret.exs'
    "
  fi
}
